//output:index.html
doctype html
html
  head
    meta(charset='utf8')
    link(rel='stylesheet' href='https://getuikit.com/assets/uikit/dist/css/uikit.css')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    title SM Hacks LIVE
  body
    nav.uk-navbar-container(uk-navbar=true)
      .uk-navbar-left
        a.uk-navbar-item.uk-logo(href='#')
          |SM Hacks LIVE&nbsp;
          i.fa.fa-video-camera
      .uk-navbar-right
        ul.uk-navbar-nav
          li: a(href='#nav' uk-toggle=true)
            i.fa.fa-bars.fa-2x
    .uk-container(style='margin-top:20px')
      .uk-grid-medium(uk-grid=true)
        div: .uk-card.uk-card-default.uk-card-body <a class="twitter-timeline" data-height="400" data-theme="light" data-link-color="#E95F28" href="https://twitter.com/sanmateohacks">Tweets by sanmateohacks</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        div: .uk-card.uk-card-default.uk-card-body
          h1 Hey there! Wonder what this is?
          p This is the place for hackers at SM Hacks to check for hackathon updates.
    #nav(uk-offcanvas='overlay:true;flip:true;mode:reveal')
      .uk-offcanvas-bar
        p: a(href='https://smhacks.devpost.com/' target='_blank')
          i.fa.fa-code.fa-fw
          |&nbsp;Devpost
        p: a(href='https://drive.google.com/file/d/0B6tVJ5ml7Bt4NjBlbXNXcEZsUE0/view?usp=sharing' target='_blank')
          i.fa.fa-map.fa-fw
          |&nbsp;Floor plan
        hr
        p: a(href='https://facebook.com/sanmateohacks' target='_blank')
          i.fa.fa-facebook.fa-fw
          |&nbsp;Facebook
        p: a(href='https://twitter.com/sanmateohacks' target='_blank')
          i.fa.fa-twitter.fa-fw
          |&nbsp;Twitter
        p: a(href='https://smhacks.slack.com' target='_blank')
          i.fa.fa-slack.fa-fw
          |&nbsp;Slack
        
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://getuikit.com/assets/uikit/dist/js/uikit.js')