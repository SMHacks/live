//output:index.html
doctype html
html
  head
    meta(charset='utf8')
    link(rel='stylesheet' href='https://getuikit.com/assets/uikit/dist/css/uikit.css')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    title SM Hacks LIVE
  body.uk-background-muted
    nav.uk-navbar-container(uk-navbar=true)
      .uk-navbar-left
        a.uk-navbar-item.uk-logo(href='#')
          |SM Hacks LIVE&nbsp;
          i.fa.fa-video-camera
      .uk-navbar-right
        ul.uk-navbar-nav
          li: a(href='#nav' uk-toggle=true)
            i.fa.fa-bars.fa-2x

    .uk-container(style='margin-top:20px')
      .uk-grid-medium(uk-grid=true)
        div(class='uk-width-expand@m'): .uk-card.uk-card-default.uk-card-body
          h1.uk-text-center.uk-text-warning Only<br>
            b#t.uk-text-danger TIME
            span#ev <br>until hacking ends!
      .uk-grid-medium(uk-grid=true)
        div(class='uk-width-expand@m'): .uk-card.uk-card-default.uk-card-body
          h1 Wifi
          p See the Slack for network credentials.
          p Note that since quite a few people are going to connect to the site wifi, its speed will be slower; it is highly recommended that you use hotspots or disconnect from the network when necessary to ensure that others can use the wifi comfortably. Ethernet cables are available for large downloads.
        div(class='uk-width-auto@m')
          .uk-card.uk-card-default.uk-card-body
            h1 Next events
            p <code>02:00pm</code> - Intro to Web Dev Workshop by Google, Room EBC4
            p <code>02:30pm</code> - Intermediate iOS Workshop by Make School, Room EBC2
          br
          .uk-card.uk-card-default.uk-card-body <a class="twitter-timeline" data-height="400" data-theme="light" data-link-color="#E95F28" href="https://twitter.com/sanmateohacks">Tweets by sanmateohacks</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    
    #nav(uk-offcanvas='overlay:true;flip:true;mode:reveal')
      .uk-offcanvas-bar
        p: a(href='https://smhacks.devpost.com/' target='_blank')
          i.fa.fa-code.fa-fw
          |&nbsp;Devpost
        p: a(href='https://drive.google.com/file/d/0B6tVJ5ml7Bt4NjBlbXNXcEZsUE0/view?usp=sharing' target='_blank')
          i.fa.fa-map.fa-fw
          |&nbsp;Floor plan
        p: a(href='http://waiver.smhacks.com' target='_blank')
          i.fa.fa-file-text.fa-fw
          |&nbsp;Waiver
        hr
        p: a(href='https://itunes.apple.com/us/app/sm-hacks/id1193112362' target='_blank')
          i.fa.fa-apple.fa-fw
          |&nbsp;iOS App
        p: a(href='https://facebook.com/sanmateohacks' target='_blank')
          i.fa.fa-facebook.fa-fw
          |&nbsp;Facebook
        p: a(href='https://twitter.com/sanmateohacks' target='_blank')
          i.fa.fa-twitter.fa-fw
          |&nbsp;Twitter
        p: a(href='http://slack.smhacks.com' target='_blank')
          i.fa.fa-slack.fa-fw
          |&nbsp;Slack
        
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://getuikit.com/assets/uikit/dist/js/uikit.js')
    script(src='https://momentjs.com/downloads/moment.min.js')
    script(src='https://rawgit.com/mckamey/countdownjs/master/countdown.min.js')
    script(src='https://rawgit.com/icambron/moment-countdown/master/dist/moment-countdown.min.js')
    script.
      setInterval(function(){
        t.innerHTML=moment('2017-01-15 12:00:00').countdown()
      },1)